<section id="contact" class="contact">
  <div class="container">
    <h2 class="section-title">联系方式</h2>
    <p class="section-subtitle">期待与您的交流合作</p>
    
    <div class="contact-content">
      <!-- 邮箱信息卡片 -->
      <div class="email-card">
        <div class="email-icon">
          <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
        </div>
        <div class="email-info">
          <h3>电子邮箱</h3>
          <a href="mailto:wangfeiyang24@mails.ucas.ac.cn" class="email-link">
            wangfeiyang24@mails.ucas.ac.cn
          </a>
          <p class="email-desc">欢迎通过邮件联系我，讨论项目合作或工作机会</p>
        </div>
      </div>

      <!-- 联系表单 -->
      <div class="contact-form">
        <h3>快速留言</h3>
        <p class="form-subtitle">填写表单，我会尽快回复您</p>
  <form id="contact-form">
          <div class="form-row">
            <div class="form-group">
              <label for="name">您的姓名</label>
              <input type="text" id="name" name="name" placeholder="请输入姓名" required />
            </div>
            <div class="form-group">
              <label for="email">您的邮箱</label>
              <input type="email" id="email" name="email" placeholder="example@email.com" required />
            </div>
          </div>
          <div class="form-group">
            <label for="subject">消息主题</label>
            <input type="text" id="subject" name="subject" placeholder="请输入主题" required />
          </div>
          <div class="form-group">
            <label for="message">消息内容</label>
            <textarea id="message" name="message" rows="5" placeholder="请输入您的消息内容..." required></textarea>
          </div>
          <button type="submit" class="submit-btn">
            <span>发送消息</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="22" y1="2" x2="11" y2="13"/>
              <polygon points="22 2 15 22 11 13 2 9 22 2"/>
            </svg>
          </button>
        </form>
        <div id="form-feedback" role="status" aria-live="polite" style="margin-top:0.75rem;color:var(--text-dark);"></div>
      </div>
    </div>

    <!-- 二维码区域 -->
    <div class="qr-codes">
      <div class="qr-card">
        <div class="qr-image">
          <img src="/xianyu.jpg" alt="闲鱼二维码" />
        </div>
        <h4>闲鱼接单</h4>
        <p>扫码查看我的闲鱼主页</p>
      </div>
      <div class="qr-card">
        <div class="qr-image">
          <img src="/weixin.jpg" alt="微信二维码" />
        </div>
        <h4>微信联系</h4>
        <p>扫码添加微信好友</p>
      </div>
    </div>

        <!-- 状态徽章 -->
    <div class="availability">
      <div class="availability-badge">
        <span class="status-dot"></span>
        <span>目前开放接受新项目和工作机会</span>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 6rem 2rem;
    background: var(--bg-white);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 1rem;
    color: var(--text-dark);
    position: relative;
    display: inline-block;
    left: 50%;
    transform: translateX(-50%);
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -12px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--primary);
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-light);
    font-size: 1.05rem;
    margin-bottom: 4rem;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
    align-items: start;
  }

  /* 邮箱卡片 */
  .email-card {
    background: linear-gradient(135deg, var(--bg-light) 0%, #E6F3F5 100%);
    padding: 3rem 2.5rem;
    border: 2px solid var(--border-color);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 2rem;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    height: 100%;
  }

  .email-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(46, 125, 137, 0.05) 0%, transparent 70%);
    transform: scale(0);
    transition: transform 0.6s ease;
  }

  .email-card:hover::before {
    transform: scale(1);
  }

  .email-card:hover {
    border-color: var(--primary);
    box-shadow: 0 12px 40px rgba(46, 125, 137, 0.15);
  }

  .email-icon {
    width: 100px;
    height: 100px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 25px rgba(46, 125, 137, 0.15);
    transition: all 0.4s ease;
    position: relative;
    z-index: 1;
  }

  .email-icon svg {
    color: var(--primary);
    transition: all 0.4s ease;
  }

  .email-card:hover .email-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 12px 35px rgba(46, 125, 137, 0.25);
  }

  .email-card:hover .email-icon svg {
    transform: scale(1.1);
  }

  .email-info {
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .email-info h3 {
    font-size: 1.5rem;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .email-link {
    display: inline-block;
    font-size: 1.15rem;
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 1.5rem;
    padding: 0.75rem 1.5rem;
    background: white;
    border: 2px solid var(--primary);
    transition: all 0.3s ease;
    word-break: break-all;
  }

  .email-link:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(46, 125, 137, 0.3);
  }

  .email-desc {
    color: var(--text-gray);
    font-size: 0.95rem;
    line-height: 1.7;
  }

  /* 联系表单 */
  .contact-form {
    background: var(--bg-light);
    padding: 3rem 2.5rem;
    border: 2px solid var(--border-color);
    transition: all 0.4s ease;
  }

  .contact-form:hover {
    border-color: var(--primary);
    box-shadow: 0 8px 30px rgba(46, 125, 137, 0.1);
  }

  .contact-form h3 {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
    color: var(--text-dark);
  }

  .form-subtitle {
    color: var(--text-light);
    font-size: 0.95rem;
    margin-bottom: 2rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-gray);
    margin-bottom: 0.5rem;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 2px solid var(--border-color);
    background: white;
    font-family: inherit;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(46, 125, 137, 0.1);
  }

  .form-group textarea {
    resize: vertical;
  }

  .submit-btn {
    width: 100%;
    padding: 1rem 2rem;
    background: var(--primary);
    color: white;
    border: none;
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .submit-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }

  .submit-btn:hover::before {
    width: 400px;
    height: 400px;
  }

  .submit-btn span,
  .submit-btn svg {
    position: relative;
    z-index: 1;
  }

  .submit-btn:hover {
    background: var(--primary-light);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(46, 125, 137, 0.3);
  }

  .submit-btn:active {
    transform: translateY(-1px);
  }

  /* 状态徽章 */
  .availability {
    margin-top: 4rem;
    text-align: center;
  }

  .availability-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.25rem 2.5rem;
    background: linear-gradient(135deg, #E6F7F0 0%, #D4F1E8 100%);
    border: 2px solid #5BA199;
    color: var(--text-dark);
    font-weight: 600;
    font-size: 1.05rem;
    transition: all 0.3s ease;
  }

  .availability-badge:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(91, 161, 153, 0.3);
  }

  .status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #27C93F;
    animation: pulse 2s infinite;
    box-shadow: 0 0 0 0 rgba(39, 201, 63, 0.7);
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      box-shadow: 0 0 0 0 rgba(39, 201, 63, 0.7);
    }
    50% {
      opacity: 0.8;
      box-shadow: 0 0 0 8px rgba(39, 201, 63, 0);
    }
  }

  /* 二维码区域 */
  .qr-codes {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    margin-top: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .qr-card {
    background: white;
    padding: 2rem;
    text-align: center;
    transition: all 0.4s ease;
  }

/*
    .qr-card:hover {
        border-color: var(--primary);
        box-shadow: 0 12px 40px rgba(46, 125, 137, 0.15);
    }
*/

  .qr-image {
    width: 200px;
    height: 200px;
    margin: 0 auto 1.5rem;
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .qr-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .qr-card h4 {
    font-size: 1.25rem;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .qr-card p {
    color: var(--text-gray);
    font-size: 0.95rem;
  }

  @media (max-width: 968px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 2rem;
    }

    .contact {
      padding: 4rem 1rem;
    }

    .email-card,
    .contact-form {
      padding: 2rem 1.5rem;
    }
  }
</style>

<script type="module">
  // 客户端表单提交：将表单数据 POST 到 /api/contact（JSON），显示成功/错误提示
  const form = document.getElementById('contact-form');
  const feedback = document.getElementById('form-feedback');

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      feedback.textContent = '';

      const submitBtn = form.querySelector('button[type="submit"]');
      if (submitBtn) submitBtn.disabled = true;

      const formData = new FormData(form);
      const payload = {
        name: formData.get('name') || '',
        email: formData.get('email') || '',
        subject: formData.get('subject') || '来自网站的消息',
        message: formData.get('message') || ''
      };

      try {
        const res = await fetch('/api/contact', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const data = await res.json();
        if (res.ok) {
          feedback.style.color = 'green';
          feedback.textContent = data.message || '消息已发送，感谢联系！';
          form.reset();
        } else {
          feedback.style.color = 'crimson';
          feedback.textContent = data.error || '发送失败，请稍后重试。';
        }
      } catch (err) {
        feedback.style.color = 'crimson';
        feedback.textContent = '网络错误，无法发送消息。';
      } finally {
        if (submitBtn) submitBtn.disabled = false;
      }
    });
  }
</script>
